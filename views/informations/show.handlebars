<div class="container">
  <div class="col s12 m8">
    <div class="card story">
      <div class="card-content info-show">
        <span class="card-title">
          Objet :
          {{information.objet}}
          <small>{{{editIcon user.statut information.id false}}}</small>
          <br>
          Référence : {{information.reference}}
        </span>
        <br>
        {{{stripTags information.commentaire}}}
        <br>
      </div>
      <div class="card-action right-align">
        <div class="row">
          <span class="left">
            <img class="materialboxed responsive-img thumb" data-caption="{{information.objet}}" src="https://res.cloudinary.com/nyf005/image/upload/v1538588712/{{information.image.id}}.{{information.image.format}}">
          </span>
          <small style="padding-bottom:0px;">
            Publié le {{formatDate information.date_ajout "Do MMMM YYYY" "fr"}} <br>
            Expire le {{formatDate information.date_expiration "Do MMMM YYYY" "fr"}}
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
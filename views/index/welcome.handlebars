    <img class="responsive-img" src="https://res.cloudinary.com/nyf005/image/upload/v1576278939/public/def.jpg">
  </div>
</div>

<div class="container">
  <div class="row">
    <h4 class="lignes"><span class="actu-welcome-titre">À la une</span> </h4>
    <a class="animated_link2 right black-text" href="/actualites/showall">Voir toutes les actualités <i class="material-icons right">more_horiz</i></a>
  </div>


  <div class="row">
    {{#each actualites}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-content info-show actu">
          <h6 class="center"><b>{{titre}}</b></h6>
          <p>{{{stripTags (truncate texte 150)}}}</p>
          <br>
        </div>
        <div>
          <a href="/actualites/show/{{id}}" class="waves-effect btn waves-teal right">Voir l'article</a>
        </div>
      </div>
    </div>
    {{else}}
    <p class="center">Aucune actualité pour le moment.</p>
    {{/each}}
  </div>
</div>